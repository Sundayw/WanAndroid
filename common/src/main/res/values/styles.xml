<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/bg_splash_activity</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Size12ColorBlack">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Size14ColorBlack">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Size16ColorBlack">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Size18ColorBlack">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Size20ColorBlack">
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Size12ColorWhite">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Size14ColorWhite">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Size16ColorWhite">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Size18ColorWhite">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Size20ColorWhite">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Size12ColorGrey500">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Size14ColorGrey500">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Size16ColorGrey500">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Size18ColorGrey500">
        <item name="android:textColor">@color/md_grey_500</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Size12ColorGrey700">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Size14ColorGrey700">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Size16ColorGrey700">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Size18ColorGrey700">
        <item name="android:textColor">@color/md_grey_700</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Text.Size12ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Text.Size14ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Size16ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Size18ColorAccent">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="Text.FrameAccentSize12">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:background">@drawable/shape_frame_accent</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal" />

    <style name="WebTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccentColorButtonTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
